{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "QB64PEwiki",
            "type": "command",
            "command": "simpleBrowser.show",
            "args": [
                "https://qb64phoenix.com/qb64wiki"
            ]
        },
        {
            "id": "QB64PEforums",
