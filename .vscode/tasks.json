            "type": "shell",
            "windows": {
                "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            },
            "osx": {
                "command": "${fileDirname}/${fileBasenameNoExtension}.run",
            },
            "linux": {
                "command": "${fileDirname}/${fileBasenameNoExtension}.run",
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "QB64PE: Open Selected in InForm",
