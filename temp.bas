DIM AS LONG CANVAS, BOX
DIM AS INTEGER cw, ch, bw, bh, bx, by
cw = 800 : ch = 600
bw = 200 : bh = 200
bx = 10 : by = 10

CANVAS = _NEWIMAGE(cw, ch, 32)
BOX = _NEWIMAGE(bw, bh, 32)
SCREEN CANVAS

_DEST BOX
LINE (0, 0)-(bw-1, bh-1), _RGB(255, 0, 0), B, &B0011001100110011
_PUTIMAGE (bx, by), BOX, CANVAS
LINE (0, 0)-(bw-1, bh-1), _RGB(0, 0, 0), B
_PUTIMAGE (bx, by), BOX, CANVAS
LINE (0, 0)-(bw-1, bh-1), _RGB(255, 255, 0), B, &B1100110011001100
_PUTIMAGE (bx, by), BOX, CANVAS
SLEEP

SCREEN 0
_FREEIMAGE BOX
_FREEIMAGE CANVAS
